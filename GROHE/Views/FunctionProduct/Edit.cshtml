@model GROHE.Models.tblFunctionProduct

@{
    ViewBag.Title = "Create"; Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)


    <div class="Nvar_Content_Detail">
        <div class="Left_Nvar">
            <img src="/Content/Admin/Icon/folder.png" alt="Danh mục sản phẩm" />Add FunctionProduct
        </div>

    </div>
    <div class="Content_Content_Detail">

        <div class="tr_1">
            <div class="left_tr1">
                <span>Function Name :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Name, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Description :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Description, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Url :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Url, new { @class = "Leght_2" })

            </div>
        </div>
        <div class="tr_1">
            <div class="left_tr1">
                <span>Image :</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Images, new { @class = "Leght_2" })&nbsp;<input id="SelectImages" type="button" value="Browses" />

            </div>
        </div>

        <div class="tr_1">
            <div class="left_tr1">
                <span>Ord:</span>
            </div>
            <div class="Right_tr1">
                @Html.TextBoxFor(p => p.Ord, new { @class = "txtWarraty"  })

            </div>
        </div>


        <div class="tr_1">
            <div class="left_tr1">
                <span>Active :</span>
            </div>
            <div class="Right_tr1">
                @Html.RadioButtonFor(p => p.Active, "true", new { @id = "Active" }) : Yes
                @Html.RadioButtonFor(p => p.Active, "false", new { @id = "Active" }): No
            </div>
        </div>


        <div class="tr_1">
            <div class="left_tr1">
            </div>
            <div class="Right_tr1">
                <button type="submit" id="btnAdd" name="btnAdd" class="btnAdd">Add</button>

            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Images").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>